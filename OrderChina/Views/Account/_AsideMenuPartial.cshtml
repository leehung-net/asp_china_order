@using OrderChina.Models
<aside class='col-md-3 order-sidebar'>
    <h3 class='text-center'><i class="fa fa-gavel"></i> Đơn hàng</h3>
    <ul class="list-group btn-flat">
        @if (ViewData["manage"] != null)
        {
            <li class="list-group-item active">
                <a href=@Url.Action("Manage","Account") title="Đơn hàng của bạn">
                    Đơn hàng
                </a>
            </li>
        }
        else
        {
            <li class="list-group-item">
                <a href=@Url.Action("Manage","Account") title="Đơn hàng của bạn">
                    Đơn hàng
                </a>
            </li>
        }

        <li class="list-group-item ">
            <a href="#" title="Đơn ký gửi của bạn">
                Đơn ký gửi
            </a>
        </li>
    </ul>

    <h3 class="text-center">
        <i class="fa fa-user"></i>
        Tài Khoản
    </h3>
    <ul class="list-group">
        <li class="list-group-item ">
            <a href="#">Lịch sử giao dịch <sup class='label label-danger btn-flat pull-right'>new</sup></a>
        </li>
        @if (Session["UserType"] != null && ((string)Session["UserType"] == UserType.Admin.ToString() || (string)Session["UserType"] == UserType.SuperUser.ToString()))
        {
            if (ViewData["ListClient"] != null)
            {
                <li class="list-group-item active">
                    <a href="@Url.Action("ListClient", "Account")">Danh sách người sử dụng</a>
                </li>
            }
            else
            {
                <li class="list-group-item">
                    <a href="@Url.Action("ListClient", "Account")">Danh sách người sử dụng</a>
                </li>
            }
        }
        @if (Session["UserType"] != null && ((string)Session["UserType"] == UserType.Admin.ToString() || (string)Session["UserType"] == UserType.SuperUser.ToString() || (string)Session["UserType"] == UserType.Accounting.ToString()))
        {
            if (ViewData["Rate"] != null)
            {
                <li class="list-group-item active">
                    <a href="@Url.Action("UpdateRate", "Account")">Cập nhật tỷ giá</a>
                </li>
            }
            else
            {
                <li class="list-group-item">
                    <a href="@Url.Action("UpdateRate", "Account")">Cập nhật tỷ giá</a>
                </li>
            }
        }
        @if (Session["UserType"] != null && ((string)Session["UserType"] == UserType.Admin.ToString() || (string)Session["UserType"] == UserType.SuperUser.ToString() || (string)Session["UserType"] == UserType.Accounting.ToString()))
        {
            if (ViewData["Node"] != null)
            {
                <li class="list-group-item active">
                    <a href="@Url.Action("ManageNews", "News")">Quản lí tin tức</a>
                </li>
            }
            else
            {
                <li class="list-group-item">
                    <a href="@Url.Action("ManageNews", "News")">Quản lí tin tức</a>
                </li>
            }
        }
        <li class="list-group-item "><a href="#">Thông báo</a></li>
        @if (Session["UserType"] != null && ((string)Session["UserType"] == UserType.Admin.ToString() || (string)Session["UserType"] == UserType.SuperUser.ToString() || (string)Session["UserType"] == UserType.Accounting.ToString()))
        {
            var id = Session["ID"];
            if (ViewData["User"] != null)
            {
                <li class="list-group-item active">
                    <a href="@Url.Action("Personal", "Account", new { id = id })">Thông tin cá nhân</a>
                </li>
            }
            else
            {
                <li class="list-group-item">
                    <a href="@Url.Action("Personal", "Account", new { id = id })">Thông tin cá nhân</a>
                </li>
            }
        }
        <li class="list-group-item ">
            <a href="#">Đổi mật khẩu</a>
        </li>
        <li class="list-group-item ">
            <a href="#">Điều khoản sử dụng</a>
        </li>
    </ul>
</aside>