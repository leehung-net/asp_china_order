@{
    ViewBag.Title = "_SaleConfirmOrderPartial";
}
@model OrderChina.Models.Order
@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm("SaleConfirmOrder", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">"Chốt đơn hàng"</h4>
        </div>
        <div class="modal-body">
            <div class="form-group row" style="width: 100%;font-size: 14px">

                @Html.HiddenFor(m => m.OrderId)

                <div class="col-sm-4">
                    @Html.LabelFor(m => m.Fee)
                    @Html.TextBoxFor(m => m.Fee, new { @class = "form-control btn-flat"})
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(m => m.FeeShip)
                    @Html.TextBoxFor(m => m.FeeShip, new { @class = "form-control btn-flat" })
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(m => m.FeeShipChina)
                    @Html.TextBoxFor(m => m.FeeShipChina, new { @class = "form-control btn-flat" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" value="Save" id="btnSave" name="cmd" class="btn btn-primary">Cập nhật</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
}