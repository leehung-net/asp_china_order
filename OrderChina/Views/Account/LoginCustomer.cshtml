@model OrderChina.Models.LoginModel
@{
    ViewBag.Title = "Đăng nhập khách hàng";
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryval")
<style>
    .login {
        align-items: center;
        font-size: 14px;
        max-width: 700px;
        margin: auto;
        margin-top: 5%;
        padding: 10px 30px;
        box-shadow: 0px 0px 6px rgba(0, 0, 0, 10);
        -moz-box-shadow: 0px 0px 6px rgba(0, 0, 0, 10);
        -webkit-box-shadow: 0px 0px 6px rgba(0, 0, 0, 10);
        font-family: 'Open Sans',sans-serif;
    }
</style>
<div style="max-width: 100%; height: 100%; background-color: white">
    <div class="login">
        <div style="min-width:640px;min-height:280px;margin:auto;margin-top:50px">
            <p style="font-size: 20px; color: #888;text-align:center"><b>Đăng nhập</b></p>
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group ">
                    <div class="col-sm-3 control-label"><p style="font-size:15px;margin-top:7px" align="right"> Email or Phone</p></div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email or Phone" })
                        <br />
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div>
                    <div class="col-sm-3 control-label">
                        <p style="font-size:15px;margin-top:7px" align="right">@Html.LabelFor(m => m.Password)</p>
                    </div>
                    <div class="col-sm-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        <br />
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>

                <div class="col-sm-8" style="float:right">
                    <label class="col-sm-3 control-label"></label>
                    <div class="check-store pull-left">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </div>
                    <div class="btn-controls pull-right">
                        <button type="submit" value="" class="btn btn-danger">Đăng nhập</button>
                        <button type="reset" value="" class="btn btn-default" style="width:50px">Hủy</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-right col-sm-8" style="float:right">
                        <p style="font-size:14px">
                            Nếu  bạn chưa có tài khoản hãy<i style="color:blue"> @Html.ActionLink("Đăng ký", "Register")</i>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>