@if (Request.IsAuthenticated)
{
    var name = Session["Name"] != null ? Session["Name"].ToString() : User.Identity.Name;
    <text>
        <li>
            <a href="@Url.Action("Manage", "Account")">Quản lý</a>
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@name<span class="caret"></span></a>
            <ul class="dropdown-menu flat">
                <li><a href="">Thông tin cá nhân</a></li>
                <li>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a></li>
                    }
            </li>
            </ul>
            </li>

    </text>
}
else
{
    <li>@Html.ActionLink("Đăng ký", "Register", "Account")</li>
    <li>@Html.ActionLink("Đăng nhập", "Login", "Account")</li>
}
